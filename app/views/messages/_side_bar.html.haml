  .SideHeader
    .SideHeader__box
      .SideHeader__username 
        =current_user.name
      .SideHeader__icon-list 
        .SideHeader__icon
        = link_to new_group_path do
          = icon('fas', 'edit')
        .SideHeader__icon
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog')
