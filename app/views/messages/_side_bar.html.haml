.SideBar
  .SideHeader
    .SideHeader__box
      .SideHeader__username 
        =current_user.name
      .SideHeader__icon-list 
        .SideHeader__icon
        = link_to new_group_path do
          = icon('fas', 'edit', class: 'SideHeader__icon')
        .SideHeader__icon
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'SideHeader__icon')
  .Grouplist
    - current_user.groups.each do |group|
      .Side-group
        = link_to group_messages_path(group) do
          .Side-group__name
            = group.name
          .Side-group__message
            = group.show_last_message
